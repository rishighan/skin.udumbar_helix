<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- yesnodialog -->
	<defaultcontrol always="true">10</defaultcontrol>

	<controls>

		<!-- Background -->
		<include>DialogFadeBackgroundImage</include>

		<!-- Main group -->
		<control type="group">
			<include>DialogZoomAnimation</include>
			<centerleft>50%</centerleft>
			<centertop>50%</centertop>
			<width>720</width>
			<height>360</height>

			<!-- Background -->
			<control type="image">
				<centerleft>50%</centerleft>
				<width>720</width>
				<height>360</height>
				<texture border="20">dialogs/DialogBackground.png</texture>
			</control>

			<!-- Heading -->
			<control type="label" id="1">
				<centerleft>50%</centerleft>
				<top>40</top>
				<width>600</width>
				<height>48</height>
				<align>center</align>
				<font>Font48</font>
				<textcolor>DialogColor1</textcolor>
			</control>

			<!-- Details -->
			<control type="textbox" id="9">
				<centerleft>50%</centerleft>
				<top>96</top>
				<width>600</width>
				<height>158</height>
				<align>center</align>
				<font>Font42</font>
				<autoscroll>False</autoscroll>
				<textcolor>DialogColor2</textcolor>
			</control>

			<!-- No -->
			<control type="button" id="10">
				<left>40</left>
				<top>262</top>
				<width>270</width>
				<height>36</height>
				<align>right</align>
				<onleft>noop</onleft>
				<onright>11</onright>
				<label>106</label>
				<font>Font36</font>
			</control>

			<!-- Yes -->
			<control type="button" id="11">
				<right>40</right>
				<top>262</top>
				<width>270</width>
				<height>36</height>
				<onleft>10</onleft>
				<onright>noop</onright>
				<label>107</label>
				<font>Font36</font>
			</control>

		</control>

	</controls>

</window>
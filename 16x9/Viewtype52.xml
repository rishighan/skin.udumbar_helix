<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="Viewtype52">

		<control type="group">
			<visible>Control.IsVisible(52)</visible>

			<!-- Curve -->
			<control type="image">
				<left>20</left>
				<top>20</top>
				<width>1880</width>
				<height>784</height>
				<texture border="0,0,0,40">common/CurveHorz.png</texture>
				<visible>Skin.HasSetting(ShowCurve)</visible>
			</control>

			<!-- Wide list -->
			<control type="fixedlist" id="52">
				<left>0</left>
				<top>120</top>
				<width>1920</width>
				<height>750</height>
				<onup condition="!Skin.HasSetting(KioskMode)">3001</onup>
				<ondown>61</ondown>
				<onleft>52</onleft>
				<onright>52</onright>
				<pagecontrol>61</pagecontrol>
				<preloaditems>4</preloaditems>
				<focusposition>3</focusposition>
				<orientation>horizontal</orientation>
				<viewtype label="539">list</viewtype>
				<scrolltime tween="sine" easing="out">240</scrolltime>
				<visible>Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons)</visible>

				<itemlayout width="249" height="666">
					<control type="image">
						<left>23</left>
						<top>135</top>
						<width>225</width>
						<height>333</height>
						<texture>$INFO[ListItem.Icon]</texture>
						<colordiffuse>OverlayColorNF</colordiffuse>
						<aspectratio align="center" aligny="center">keep</aspectratio>
						<visible>SubString(ListItem.Icon,Default)</visible>
					</control>
					<control type="group">
						<visible>!SubString(ListItem.Icon,Default)</visible>
						<control type="image">
							<left>23</left>
							<top>135</top>
							<width>225</width>
							<height>366</height>
							<texture border="1,1,1,36">views/DropShadowSmall.png</texture>
						</control>
						<control type="image">
							<left>23</left>
							<top>135</top>
							<width>225</width>
							<height>333</height>
							<colordiffuse>DiffusePosterNF</colordiffuse>
							<texture background="true">$INFO[ListItem.Thumb]</texture>
							<aspectratio align="center">scale</aspectratio>
						</control>
						<control type="image">
							<left>23</left>
							<top>135</top>
							<width>225</width>
							<height>333</height>
							<texture>views/OverlayPosterNF.png</texture>
							<visible>Skin.HasSetting(Overlays)</visible>
						</control>
						<!-- Watched status -->
						<control type="image">
							<left>177</left>
							<top>452</top>
							<width>35</width>
							<height>49</height>
							<texture>$VAR[StatusOverlayWide]</texture>
							<visible>Skin.HasSetting(WatchedFlags)</visible>
						</control>
					</control>
				</itemlayout>

				<focusedlayout width="405" height="666">
					<control type="image">
						<left>11</left>
						<top>0</top>
						<width>405</width>
						<height>600</height>
						<texture>$INFO[ListItem.Icon]</texture>
						<colordiffuse>OverlayColorFO</colordiffuse>
						<aspectratio align="center" aligny="center">keep</aspectratio>
						<animation effect="zoom" start="60" end="100" center="202,300" time="300" tween="back" easing="out" reversible="false">Focus</animation>
						<visible>SubString(ListItem.Icon,Default)</visible>
					</control>
					<control type="group">
						<visible>!SubString(ListItem.Icon,Default)</visible>
						<animation effect="zoom" start="60" end="100" center="202,300" time="300" tween="back" easing="out" reversible="false">Focus</animation>
						<control type="image">
							<left>11</left>
							<top>0</top>
							<width>405</width>
							<height>666</height>
							<texture border="1,1,1,69">views/DropShadow.png</texture>
						</control>
						<control type="image">
							<left>11</left>
							<top>0</top>
							<width>405</width>
							<height>600</height>
							<texture background="true">$INFO[ListItem.Thumb]</texture>
							<aspectratio align="center">scale</aspectratio>
						</control>
						<control type="image">
							<left>11</left>
							<top>0</top>
							<width>405</width>
							<height>600</height>
							<texture>views/OverlayPosterFO.png</texture>
							<visible>Skin.HasSetting(Overlays)</visible>
						</control>
						<!-- Watched status -->
						<control type="image">
							<left>290</left>
							<top>585</top>
							<width>35</width>
							<height>49</height>
							<texture>$VAR[StatusOverlayWide]</texture>
							<visible>Skin.HasSetting(WatchedFlags)</visible>
						</control>
					</control>
				</focusedlayout>

			</control>

			<control type="group">
				<centerleft>50%</centerleft>
				<top>800</top>
				<width>1920</width>
				<height>100</height>

				<!-- Title -->
				<control type="label">
					<left>90</left>
					<top>0</top>
					<width>1740</width>
					<height>72</height>
					<font>Font72</font>
					<align>center</align>
					<textcolor>TextColor1</textcolor>
					<shadowcolor>ShadowColor</shadowcolor>
					<label>$INFO[ListItem.Label]</label>
				</control>

				<!-- Details -->
				<control type="label">
					<left>90</left>
					<top>88</top>
					<width>1740</width>
					<height>27</height>
					<font>Font27</font>
					<align>center</align>
					<label>$VAR[Label2]</label>
					<textcolor>TextColor2</textcolor>
					<shadowcolor>ShadowColor</shadowcolor>
				</control>

			</control>

		</control>

	</include>

</includes>
